alias vim=nvim
alias mutt=neomutt
alias g=git
alias gp="git push"
alias gl="git pull"
alias gpr="gh pr create && gh pr view -w"
alias gch="git checkout HEAD"
alias grbi="git rebase -i"
alias gco="git checkout"
alias hdiff="git diff HEAD"

alias h=heroku
alias heroku="nocorrect heroku"
alias serve="ruby -run -e httpd . -p 5000"
alias v=vim
alias vl=vim_line
alias x=exit
alias e=exit
alias :e=vim
alias :q=exit

alias ehmgr="nvim ~/.config/home-manager"
alias enix="nvim /var/nix-config"
alias hmup='home-manager switch --flake "$(NIX_CONFIG_PATH)#hannes@$(hostnamectl --static)"'

alias ssh='TERM=xterm ssh'

alias psg="ps aux | grep"

alias grepf="grep -r -n --color=auto"

alias migrate="rake db:migrate; rake db:migrate RAILS_ENV=test"
alias grepr="bundle exec rake routes | grep"

alias pbcopy='xclip'
alias pbpaste='xclip -o'

alias wp="webpack-dev-server --hot"

alias kgp="kubectl get pods -n"
alias kex="kubectl exec -it -n"

alias dup="devenv up"
alias ds="devenv shell"
